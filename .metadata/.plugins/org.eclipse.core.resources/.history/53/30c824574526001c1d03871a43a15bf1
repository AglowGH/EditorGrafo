
import java.awt.geom.Point2D;

public class Arista 
{
	private Point2D n1;
	private Point2D n2;
	private int peso;
	
	public Arista(Point2D primerNodo, Point2D segundoNodo,int peso)
	{
		n1 = primerNodo;
		n2 = segundoNodo;
		this.peso = peso;
	}
	
	public void setPrimerNodo(Point2D nodo)
	{
		n1 = nodo;
	}
	
	public Point2D getPrimerNodo()
	{
		return n1;
	}
	
	public void setSegundoNodo(Point2D nodo)
	{
		n2 = nodo; 
	}
	
	public Point2D getSegundoNodo()
	{
		return n2;
	}
	
	public void setPeso(int peso)
	{
		this.peso = peso;
	}
	
	public int getPeso()
	{
		return peso;
	}
}
